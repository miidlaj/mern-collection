<section>
    <div class="container">
        <div class="row py-5">
            <div class="col-12">
                <table id="customers" class="table table-hover responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Phone Number</th>
                            <th>STB number</th>
                            <th>Rent</th>
                            <th>Registered Date</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    {{#each customers }}
                    <tbody>
                        <tr>
                            <td>
                                <a href="/one-customer-details/{{this.id}}">
                                    <div class="d-flex align-items-center">
                                        <div id="2LettersofName" class="avatar avatar-blue mr-3">{{this.Name}}
                                        </div>

                                        <div class="">
                                            <p id="Name" class="font-weight-bold mb-0">{{this.Name}}</p>
                                            <p class="text-muted mb-0">{{this.Username}}</p>
                                        </div>
                                    </div>
                                </a>
                            </td>
                            <td>{{this.Phone}}</td>
                            <td>{{this.stb_number}}</td>
                            <td>{{this.Rent}}</td>
                            <td>{{this.CreatedAt}}
                            </td>
                            {{!-- <td>
                                <div class="badge badge-success badge-success-alt">Enabled</div>
                            </td> --}}
                            <td>
                                <a href=" /all-customers/add-rent/{{this.id}}" class="btn btn-outline-info"><i
                                        class="fa fa-plus"></i></a>
                                <a href="" id="addMonthModal" class="btn btn-outline-info" data-toggle="modal"
                                    data-target="#exampleModalLong"><i class="fa fa-minus-square"></i></a>

                                <div class=" dropdown">
                                    <button class="btn btn-outline-secondary" type="button" id="dropdownMenuButton2"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class='bi bi-gear-wide-connected ' data-toggle="tooltip" data-placement="top"
                                            title="Actions"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                        <a class="dropdown-item" href="/edit-customer-details/{{this.id}}"><i
                                                class="bx bxs-pencil mr-2"></i>
                                            Edit
                                            Profile</a>
                                        <button class="dropdown-item text-danger" data-toggle="modal"
                                            data-target="#exampleModal"><i class=" bx bxs-trash mr-2"></i>
                                            Remove</button>

                                    </div>
                                </div>

                            </td>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Delete!
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h6>Are you sure want to delete {{this.Name}}</h6>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">No</button>
                                            <a class="btn btn-danger" href="/delete-customer/{{this.id}}">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <div class="container text-center">
        <div class="row py-5">
            <div class="col-12">
                <h6 class="small text-danger">Currently I'm just experimenting with this stuff, so there might be lots
                    of redundant CSS.</h6>
            </div>
        </div>

    </div>
</section>

<!-- Deactive month Add Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/all-customers/add-deactive-month/{{this.id}}" method="POST">
                <div class="modal-body">

                    <label for="months">Select number of Months:</label>
                    <select name="months" id="months">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                    </select>
                    <br><br>
                    <input type="submit" value="Submit">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Ok</button>
            </form>
        </div>
    </div>
</div>


